<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="horizontal"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/opening_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:text="&#8942;"
                    android:textAppearance="?android:textAppearanceLarge" />

                <TextView
                    android:id="@+id/tvWaliosomewarow"
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/textView5"
                    android:paddingLeft="6dp"
                    android:text="012345678901"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="6dp"
                    android:text="Meter Num"

                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textViewCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@+id/tvWaliosomewarow"
                    android:layout_alignStart="@+id/tvWaliosomewarow"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="9dp"
                    android:text="Jina La Mteja"
                    android:textColor="#0E0C0C"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="53dp"
                    android:layout_toStartOf="@+id/textViewCustomerName"
                    android:text="Name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/expandable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="8dp">


                <View
                    android:id="@+id/view5"
                    android:layout_width="1dp"
                    android:layout_height="46dp"
                    android:layout_below="@+id/textView28"
                    android:layout_marginStart="34dp"
                    android:layout_marginTop="17dp"
                    android:layout_toEndOf="@+id/txtArea_code"
                    android:background="@android:color/holo_blue_light" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="1dp"
                    android:layout_height="46dp"
                    android:layout_below="@+id/textViewCurrentReading"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="17dp"
                    android:layout_toEndOf="@+id/textView50"
                    android:background="@android:color/holo_blue_light" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/imageView"
                    android:layout_marginTop="7dp"
                    android:background="@android:color/holo_blue_light" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/holo_blue_light" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="119dp"
                    android:layout_height="110dp"
                    android:layout_below="@+id/view2"
                    android:layout_marginTop="8dp"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/textViewConnectionNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/view2"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="9dp"
                    android:layout_toRightOf="@id/textView29"
                    android:text="009781"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

                <TextView
                    android:id="@+id/textViewCurrentReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewConnectionNum"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/textView28"
                    android:background="@color/colorPrimary"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="4.7"

                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewConnectionNum"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/imageView"
                    android:text="Current Reading"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view2"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/imageView"
                    android:text="Connection Num"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtRoute"
                    android:layout_width="62dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/textView50"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="1dp"
                    android:layout_toStartOf="@+id/view4"
                    android:layout_toEndOf="@+id/view5"
                    android:text="10"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/txtArea_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView40"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="KOM" />

                <TextView
                    android:id="@+id/txtSeq"
                    android:layout_width="29dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView59"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/view4"
                    android:text="45"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView28"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:text="@string/area" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView28"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@+id/view5"
                    android:text="Route" />

                <TextView
                    android:id="@+id/textView59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView28"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/view4"
                    android:text="Seq" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view3"
                    android:layout_marginTop="3dp">

                    <Button
                        android:id="@+id/btnEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@android:color/holo_blue_light"
                        android:fadingEdge="horizontal|vertical"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="6dp"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        />


                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>